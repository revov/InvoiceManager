<UserControl x:Class="InvoiceManager.Windows.UserControls.EditPartnerControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="clr-namespace:InvoiceManager.Windows.UserControls">
	<Border BorderThickness="2" BorderBrush="Blue">
		<DockPanel>
			<StackPanel
				DockPanel.Dock="Bottom"
				Orientation="Horizontal"
				HorizontalAlignment="Right">
				<Button
					Name="EditPartnerButton"
					Click="EditPartnerButton_Click"
					Margin="5,10,5,10"
					VerticalAlignment="Bottom"
					Padding="5"
					IsDefault="True">Редактирай</Button>
				<Button
					Name="CancelPartnerButton"
					Click="CancelPartnerButton_Click"
					Margin="5,10,15,10"
					VerticalAlignment="Bottom"
					Padding="5"
					IsCancel="True">Отказ</Button>
			</StackPanel>
			
			<local:PartnerForm x:Name="partnerForm"/>
		
		</DockPanel>
	</Border>
</UserControl>