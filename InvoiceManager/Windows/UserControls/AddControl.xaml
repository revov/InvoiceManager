<?xml version="1.0" encoding="utf-8"?>
<UserControl
	x:Class="InvoiceManager.Windows.UserControls.AddControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Border BorderThickness="2" BorderBrush="Blue">
		<DockPanel Name="AddControlDockPanel" LastChildFill="True">
			<StackPanel
				DockPanel.Dock="Bottom"
				Orientation="Horizontal"
				HorizontalAlignment="Right">
				<Button
					Name="AddButton"
					Click="AddButton_Click"
					Margin="5,10,5,10"
					VerticalAlignment="Bottom"
					Padding="5"
					IsDefault="True">Добави</Button>
				<Button
					Name="CancelButton"
					Click="CancelButton_Click"
					Margin="5,10,15,10"
					VerticalAlignment="Bottom"
					Padding="5"
					IsCancel="True">Отказ</Button>
			</StackPanel>
			
			<TextBlock
				Name="Caption"
				DockPanel.Dock="Top"
				Margin="5"
				HorizontalAlignment="Left"
				FontWeight="Bold"
				FontSize="12">
				Добавяне на контрагент.<LineBreak/>Полетата, отбелязани със *, са задължителни.
			</TextBlock>
		
		</DockPanel>
	</Border>
</UserControl>