<UserControl x:Class="InvoiceManager.Windows.UserControls.PartnersListControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Name="This"
	Loaded="This_Loaded">
	<Grid>
		<ScrollViewer VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Auto">
			<ListView Name="PartnersListView" ItemsSource="{Binding ElementName=This, Path=Partners}">
			    <ListView.View>
			        <GridView>
		                <GridViewColumn Header="ЕИК/ЕГН" Width="120" DisplayMemberBinding="{Binding ID}"/>
		                <GridViewColumn Header="ИН по ЗДДС" Width="120" DisplayMemberBinding="{Binding VAT_NUMBER}"/>
			    		<GridViewColumn Header="Име" Width="120" DisplayMemberBinding="{Binding PARTNER_NAME}"/>
			    		<GridViewColumn Header="Адрес" Width="120" DisplayMemberBinding="{Binding ADDRESS}"/>
			    		<GridViewColumn Header="Пощенски код" Width="120" DisplayMemberBinding="{Binding POST_CODE}"/>
			        </GridView>
				</ListView.View>
			
			</ListView>
		</ScrollViewer>
	</Grid>
</UserControl>